<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context="com.example.checkmeet.view.AddGuestsContactsFragment">

    <ProgressBar
        android:id="@+id/progressbar_contacts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_add_contacts"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_no_contacts_found"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/no_meetings_found"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="24sp"
        android:visibility="gone"/>

</RelativeLayout>
